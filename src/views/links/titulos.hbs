<div style="width: 100%">
    <div class="container mb-5" style="max-width: 800px">
        <div class="header">
            <h1>Titulos de Propuestas de Grado</h1>
        </div>
        <form action="/links/titulos" class="registration-form" method="POST">
            <div class="mb-4">
                <div class="input-group full-width">
                    <label>Titulo</label>
                    <input type="text" name="titulo" placeholder="Titulo" autofocus required>
                </div>
                <button type="submit" class="signup-btn">Guardar Titulo</button>
            </div>
        </form>
    </div>

    {{#each titulos}}
    <div class="container mb-4" style="max-width: 800px">
        <div class="header d-flex justify-content-between">
            <h2>Titulo {{add @index 1}}</h2>

            <div class="d-flex">

                {{#if estatus}}
                <div class="btn btn-success btn-sm mt-2 text-decoration-none d-flex align-items-center px-2">
                    {{estatus}}
                </div>
                {{else}}
                <div>
                    <a href="/links/delete/{{id}}"
                        class="btn btn-danger btn-sm mt-2 text-decoration-none d-flex align-items-center px-2">X</a>
                </div>
                {{/if}}

            </div>

        </div>
        <p class="h6 text-uppercase text-center">{{titulo}}</p>
    </div>
    {{else}}
    <div class="container mb-4" style="max-width: 800px">
        <h2 class="text-center" style="color: #777777;">No hay Titulos Creados AÃºn</h2>
    </div>
    {{/each}}
</div>